<phone:PhoneApplicationPage
    x:Class="LiteTube.VideoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mmppf="clr-namespace:Microsoft.PlayerFramework;assembly=Microsoft.PlayerFramework"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True" Orientation="Portrait">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <phone:Pivot x:Name="Pivot"
                     Grid.Row="2"
                     Margin="0,10,0,0">
            <phone:PivotItem Header="details"
                             x:Uid="Details">

                <ScrollViewer>
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding Title, Converter={StaticResource UppercaseConverter}}"
                                   Style="{StaticResource PhoneTextLargeStyle}"/>

                        <Grid Grid.Row="1"
                          x:Name="videoInfo">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--<ProgressBar Value="{Binding LikesProgress}"
                                     Grid.ColumnSpan="5"
                                     Style="{StaticResource LikeProgressBarStyle}"
                                     Visibility="{Binding IsLikesProgressVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>-->

                            <StackPanel Grid.Row="1" 
                                    Grid.Column="0"
                                    Orientation="Horizontal">
                                <!--<AppBarToggleButton IsCompact="True"
                                                Icon="Like"
                                                Command="{Binding LikeCommand}"
                                                IsChecked="{Binding IsLiked, Mode=TwoWay}"/>-->
                                <TextBlock Text="{Binding Likes}"
                                           Style ="{StaticResource PhoneTextTitle2Style}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                    Grid.Column="2"
                                    Grid.Row="1" >
                                <!--<AppBarToggleButton IsCompact="True"
                                                Icon="Dislike"
                                                Command="{Binding DislikeCommand}"
                                                IsChecked="{Binding IsDisliked, Mode=TwoWay}"/>-->
                                <TextBlock Text="{Binding Dislikes}"
                                           Style ="{StaticResource PhoneTextTitle2Style}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Column="4"
                                   Grid.Row="1" 
                                   Style ="{StaticResource PhoneTextTitle2Style}"
                                   VerticalAlignment="Center">
                            <Run Text="{Binding ViewCount}" />
                            <Run Text="views" x:Uid="Views"/>
                            </TextBlock>
                        </Grid>

                        <!--Info about publisher (channel)-->
                        <Grid Grid.Row="2"
                              x:Name="publisherInfo">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button BorderThickness="0"
                                    Margin="8"
                                    
                                    Click="OnChannelButtonClick">
                                <Image Source="{Binding ChannelImage}" 
                                       Stretch="UniformToFill" 
                                       Width="60"
                                       Height="60"/>
                            </Button>

                            <StackPanel Grid.Column="1"
                                        Margin="0">
                                <Button Content="{Binding ChannelTitle}"
                                        
                                        Click="OnChannelButtonClick"
                                        MaxWidth="180"/>
                                <TextBlock TextWrapping="NoWrap"
                                           Style="{StaticResource PhoneTextSmallStyle}"
                                           TextTrimming="WordEllipsis"
                                           MaxWidth="180" 
                                           HorizontalAlignment="Left" 
                                           Margin="0">
                                <Run Text="{Binding ChannelSubscribers}" />
                                <Run Text="subscribers" x:Uid="Subscribers"/>
                                </TextBlock>
                                <TextBlock TextWrapping="NoWrap"
                                           TextTrimming="WordEllipsis"
                                           MaxWidth="180"
                                           Style="{StaticResource PhoneTextSmallStyle}">
                                <Run Text="{Binding ChannelVideoCount}" />
                                <Run Text="videos" x:Uid="Videos"/>
                                </TextBlock>
                            </StackPanel>

                            <Button Content="Subscribe"
                                    x:Uid="SubscribeButton"
                                    Grid.Column="3"
                                    Margin="8"
                                    Command="{Binding SubscribeCommand}"
                                    Visibility="{Binding IsSubscribed, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                    HorizontalAlignment="Left"/>

                            <Button Content="Unsubscribe"
                                    x:Uid="UnsubscribeButton"
                                    Grid.Column="3"
                                    HorizontalAlignment="Left"
                                    Margin="5"
                                    Command="{Binding UnsubscribeCommand}"
                                    Visibility="{Binding IsSubscribed, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>

                        <TextBlock Grid.Row="3"
                               TextWrapping="NoWrap"
                               Style="{StaticResource PhoneTextLargeStyle}"
                               x:Name="publishedTextBlock">
                            <Run Text="Published at" x:Uid="PublishedAt" />
                            <Run Text="{Binding PublishedAt}"/>
                        </TextBlock>

                        <!--<ScrollViewer Grid.Row="4"
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="{StaticResource DefaultControlMargin}"
                                  x:Name="descriptionTextBlock">-->
                        <!--<StackPanel Orientation="Vertical">-->
                        <TextBlock Text="{Binding Description}"
                                           Grid.Row="4"
                                           Style="{StaticResource PhoneTextSmallStyle}"
                                           TextWrapping="Wrap"/>
                        <!--</StackPanel>-->
                        <!--</ScrollViewer>-->
                    </Grid>
                </ScrollViewer>
            </phone:PivotItem>
        </phone:Pivot>
        
        <Canvas x:Name="playerCanvas" 
                Grid.Row="1"
                VerticalAlignment="Top"
                Background="Black">
            <mmppf:MediaPlayer x:Name="player"
                               Source="{Binding VideoUri}"
                               PosterSource="{Binding ImagePath}"
                               IsFullScreenVisible="True"
                               IsFullScreenEnabled="True"
                               VerticalAlignment="Center">
                <mmppf:MediaPlayer.RenderTransform>
                    <TranslateTransform x:Name="PlayerMover"/>
                </mmppf:MediaPlayer.RenderTransform>
                
            </mmppf:MediaPlayer>
        </Canvas>
        <!--ContentPanel - place additional content here--><!--
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">

        </Grid>-->
    </Grid>

</phone:PhoneApplicationPage>