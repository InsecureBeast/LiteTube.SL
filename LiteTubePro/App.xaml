<core:LiteTubeApp
    x:Class="LiteTubePro.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:core="clr-namespace:LiteTube.Core;assembly=LiteTube.Core">

    <!--Application Resources-->
    <core:LiteTubeApp.Resources>
        <local:LocalizedStrings xmlns:local="clr-namespace:LiteTubePro" x:Key="LocalizedStrings"/>
    </core:LiteTubeApp.Resources>

    <core:LiteTubeApp.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService
            Launching="Application_Launching" Closing="Application_Closing"
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </core:LiteTubeApp.ApplicationLifetimeObjects>

</core:LiteTubeApp>